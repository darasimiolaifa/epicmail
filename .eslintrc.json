{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": "off",
        "no-trailing-spaces": [2, {"skipBlankLines": true}],
        "no-unused-vars": [
            "error",
            {
              "varsIgnorePattern": "should|expect|it|describe"
            }
          ]
    }
}