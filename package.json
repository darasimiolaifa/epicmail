{
  "name": "epicmail",
  "version": "1.0.0",
  "description": "A Web application for sending, receiving, and managing electronic mails.",
  "nyc": {
    "check-coverage": true,
    "exclude": [
      "src/**/*.spec.js"
    ]
  },
  "main": "server.js",
  "scripts": {
    "test": "nyc --require @babel/register mocha ./src/tests/*.spec.js --exit",
    "dev": "nodemon --exec babel-node ./src/server.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darasimiolaifa/epicmail.git"
  },
  "keywords": [
    "email",
    "epic",
    "backend"
  ],
  "author": "Darasimi Olaifa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/darasimiolaifa/epicmail/issues"
  },
  "homepage": "https://github.com/darasimiolaifa/epicmail#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.0",
    "moment": "^2.24.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0"
  }
}
